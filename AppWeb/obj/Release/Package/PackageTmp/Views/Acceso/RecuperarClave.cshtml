@{
    ViewBag.Title = "Recuperar Clave";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@using (Html.BeginForm("EnviarContraseña", "Acceso", FormMethod.Post))
{
    <div class="login-container">
        <form id="frm">
            <div class="form-group">
                <h2>Recuperar Contraseña</h2>
                <label for="user">Usuario:</label>
                <input type="text" name="user" class="form-control" />
                <br>

                <label for="email">Correo:</label>
                <input type="email" name="email" class="form-control" />
                <br>

                <input type="submit" value="Enviar Contraseña" class="btn btn-success" />
                <a href="#" onclick="window.history.back();">Volver Atrás</a>
                <br>
                <br>
                @if (TempData.ContainsKey("ErrorMessage"))
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    <script>
                        setTimeout(function () {
                            $(".alert").fadeOut("slow", function () {
                                $(this).remove();
                            });
                        }, 2000);
                    </script>
                }
            </div>
            
        </form>

    </div>
   

}

<style>

    .login-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(#1AF7E6, #000);
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    form {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 2rem;
        border-radius: 0.5rem;
        max-width: 30rem;
        width: 100%;
    }

    h2 {
        color: #fff;
    }

    a {
        color: #fff;
    }
</style>

