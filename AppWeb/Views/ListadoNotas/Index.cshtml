@model AppWeb.Models.Modelos.RegistroAlumnoNota
@{
    ViewBag.Title = "Index";
}

<h2>Registrar Materias</h2>


@using (Html.BeginForm("Nuevo", "ListadoNotas", FormMethod.Post))
{
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Notas.Id_Alumno, "Nombre Alumno", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Notas.Id_Alumno, Model.ListadoAlumnos)
                @Html.ValidationMessageFor(model => model.Notas.Id_Alumno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Notas.Id_Materia, "Nombre Curso", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Notas.Id_Materia, Model.ListadoMaterias)
                @Html.ValidationMessageFor(model => model.Notas.Id_Materia, "", new { @class = "text-danger" })
            </div>
        </div>


        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Message"]
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
